<Window x:Class="AppCustom.Views.ProgressBarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:AppCustom.Views"
        mc:Ignorable="d"
        Title="Loading..." Height="80" Width="305"
        WindowStartupLocation="CenterScreen"
        BorderThickness="0" ResizeMode="NoResize" ShowInTaskbar="False"
       
        >
    <Grid>
        <ProgressBar x:Name="ProgressWindow" Width="280" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0"/>
        <TextBlock x:Name="ProgressText" Width="280" Height="15"  TextAlignment="Center"/>
    </Grid>
</Window>