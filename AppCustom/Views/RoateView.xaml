<Window x:Class="AppCustom.Views.RoateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppCustom.Views"
             mc:Ignorable="d" 
            Title="MainWindow" Height="200" Width="300">
    <Grid>
        <Grid>
            <!-- TextBox -->
            <TextBox Name="textBox" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Margin="0,30,0,0"/>

            <!-- Button 1 -->
            <Button Name="button1" Command="{Binding LeftRotate}" Content="Rotate Left" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Margin="30,0,0,30"/>

            <!-- Button 2 -->
            <Button Name="button2" Command="{Binding RightRotate}" Content="Rotate Right" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Margin="0,0,30,30"/>
        </Grid>
    </Grid>
</Window>
